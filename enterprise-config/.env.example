# ── Enable Claude Code Telemetry ──────────────────────────────────
CLAUDE_CODE_ENABLE_TELEMETRY=1
OTEL_METRICS_EXPORTER=otlp
OTEL_LOGS_EXPORTER=otlp

# ── OpenTelemetry Configuration ───────────────────────────────────
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector.corp.example.com:4318
OTEL_EXPORTER_OTLP_HEADERS=Authorization=Bearer your-otel-token
OTEL_SERVICE_NAME=claude-code-enterprise

# ── Disable Anthropic's Telemetry (optional, for compliance) ─────
# These disable data sent TO Anthropic -- independent of your own OTLP export above
DISABLE_TELEMETRY=1
DISABLE_ERROR_REPORTING=1
