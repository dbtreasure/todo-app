{
  "description": "Tool allowlist and denylist configuration",
  "defaultPolicy": "deny",
  "tools": {
    "Read": {
      "allowed": true,
      "restrictions": {
        "deniedPatterns": ["*.key", "*.pem", ".env", "secrets/*"]
      }
    },
    "Grep": { "allowed": true },
    "Glob": { "allowed": true },
    "Edit": {
      "allowed": true,
      "restrictions": {
        "deniedPatterns": [".env", "*.key", "infrastructure/*"]
      }
    },
    "Write": {
      "allowed": true,
      "requiresApproval": true,
      "restrictions": {
        "deniedPatterns": [".env", "*.key", "infrastructure/*"]
      }
    },
    "Bash": {
      "allowed": true,
      "requiresApproval": true,
      "restrictions": {
        "blockedCommands": ["rm -rf", "kill -9", "DROP TABLE", "curl | sh"]
      }
    }
  }
}
