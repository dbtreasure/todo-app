{
  "mcpServers": {
    "github": {
      "command": "node",
      "args": ["path/to/github-mcp-server/dist/index.js"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "notion": {
      "command": "python",
      "args": ["-m", "notion_mcp_server"],
      "env": {
        "NOTION_TOKEN": "${NOTION_TOKEN}"
      }
    },
    "postgres": {
      "command": "./postgres-mcp-server",
      "args": ["--connection", "postgresql://user:pass@localhost/mydb"]
    }
  }
}
